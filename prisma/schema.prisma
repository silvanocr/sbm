// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  password          String
  name              String
  cpf               String?   @unique
  phone             String?
  licenseNumber     String?
  photo             String?   // URL da foto do piloto
  role              String    @default("pilot") // "admin" ou "pilot"
  dateOfBirth       DateTime? // Data de nascimento
  cep               String?   // CEP
  address           String?   // Endereço completo
  city              String?   // Cidade
  state             String?   // Estado
  healthInsurance   String?   // Plano de saúde
  emergencyContact  String?   // Contato de emergência
  emergencyPhone    String?   // Telefone do contato de emergência
  bloodType         String?   // Tipo sanguíneo (A+, A-, B+, B-, AB+, AB-, O+, O-)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  enrollments       Enrollment[]
  orders            Order[]
  eventRegistrations EventRegistration[]
  messages          Message[]
}

model Enrollment {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // 'course', 'trackday', 'championship'
  eventId     String?
  eventName   String
  price       Float
  status      String   @default("pending") // pending, paid, cancelled
  paymentId   String?
  receiptUrl  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  image       String?
  category    String
  stock       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id])
  total       Float
  status      String     @default("pending") // pending, paid, cancelled, delivered
  paymentId   String?
  receiptUrl  String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  items       OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
}

model News {
  id          String   @id @default(cuid())
  title       String
  content     String
  image       String?
  author       String?
  published    Boolean  @default(false)
  publishedAt  DateTime?
  category     String   @default("sbm") // "sbm", "copa-cb", "campeonato-gaucho"
  featured     Boolean  @default(false) // Destaque na home
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model InstagramPost {
  id          String   @id @default(cuid())
  postId      String   @unique
  caption     String?
  imageUrl    String
  permalink   String
  timestamp   DateTime
  createdAt   DateTime @default(now())
}

model Event {
  id              String   @id @default(cuid())
  name            String
  description     String?
  eventDate       DateTime
  registrationDeadline DateTime
  price           Float
  maxParticipants Int?
  currentParticipants Int @default(0)
  location        String?
  category        String   @default("sbm") // "sbm", "copa-cb", "campeonato-gaucho"
  active          Boolean  @default(true)
  image           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  registrations   EventRegistration[]
}

model EventRegistration {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  eventId     String
  event       Event    @relation(fields: [eventId], references: [id])
  status      String   @default("pending") // pending, paid, cancelled, completed
  paymentId   String?
  receiptUrl  String?
  paymentMethod String? // "pix", "credit_card"
  installments  Int?   @default(1)
  totalPaid   Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Banner {
  id          String   @id @default(cuid())
  title       String?
  imageUrl    String
  link        String?
  position    String   // "home-hero", "home-top", "home-bottom", etc
  active      Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Message {
  id          String   @id @default(cuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  name        String
  email       String
  subject     String
  message     String
  read        Boolean  @default(false)
  replied     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PaymentConfig {
  id                    String   @id @default(cuid())
  stripePublicKey       String?
  stripeSecretKey       String?
  stripeWebhookSecret   String?
  pixEnabled            Boolean  @default(true)
  creditCardEnabled     Boolean  @default(true)
  maxInstallments       Int      @default(12)
  installmentsWithoutInterest Int @default(3) // Parcelas sem juros
  interestRate          Float    @default(0.02) // Taxa de juros por parcela (2%)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
